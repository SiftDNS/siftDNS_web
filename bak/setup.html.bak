    <style>
        :root {
            /* --- Sediment & Stream Palette --- */
            
            /* Backgrounds */
            --bg-main: #1a1a1a;       /* Deep Bedrock */
            --bg-card: #2C2C2C;       /* Dark Stone */
            --bg-header: #232323;     /* Header BG */
            
            /* Brand Colors */
            --primary: #466D87;       /* Slate Blue */
            --primary-dark: #355266;  /* Dark Slate */
            --primary-light: #598392; /* Eucalyptus */
            
            /* Accents */
            --accent: #D4A373;        /* Raw Copper */
            --accent-hover: #E0C097;  /* Sand */
            
            /* Text */
            --text-main: #f0f0f0;     /* Off-white */
            --text-muted: #b0b0b0;    /* Light Grey */
            --text-on-accent: #1a1a1a; /* Dark text for buttons */
            
            /* Borders */
            --border-color: #3a3a3a;

            /* Shadows */
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.5);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.5);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html { 
            scroll-behavior: smooth;
            scrollbar-width: thin;
            scrollbar-color: var(--primary) var(--bg-main);
        }

        /* Custom Scrollbars */
        ::-webkit-scrollbar {
            width: 12px;
        }
        ::-webkit-scrollbar-track {
            background: var(--bg-main);
        }
        ::-webkit-scrollbar-thumb {
            background-color: var(--primary);
            border-radius: 6px;
            border: 3px solid var(--bg-main);
        }
        ::-webkit-scrollbar-thumb:hover {
            background-color: var(--accent);
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: var(--bg-main);
            color: var(--text-main);
            line-height: 1.6;
        }

        /* Accessibility: Styles for skip link */
        .skip-link {
            position: absolute;
            top: -100px;
            left: 0;
            background: var(--accent);
            color: var(--text-on-accent);
            padding: 1rem;
            z-index: 9999;
            transition: top 0.3s ease-in-out;
        }
        .skip-link:focus {
            top: 0;
        }

        header {
            background: rgba(26, 26, 26, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        nav {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            display: flex;
            align-items: center;
            font-weight: 800;
            font-size: 1.75rem;
            color: var(--primary);
            text-decoration: none;
        }

        .logo-icon {
            width: 40px;
            height: 40px;
            margin-right: 12px;
        }

        .back-link {
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .back-link:hover {
            transform: translateX(-5px);
            color: var(--accent);
        }

        .setup-hero {
            background: linear-gradient(135deg, #1a1a1a 0%, #2E4A5C 100%);
            color: white;
            padding: 4rem 2rem;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
        }

        .setup-hero h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--text-main);
        }

        .setup-hero p {
            font-size: 1.25rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
            color: var(--text-muted);
        }

        .setup-content {
            max-width: 900px;
            margin: 3rem auto;
            padding: 0 2rem;
        }

        .device-selector {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 3rem;
        }

        .device-button {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: var(--text-muted);
        }

        .device-button:hover {
            border-color: var(--accent);
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
            color: var(--text-main);
        }

        .device-button.active {
            border-color: var(--accent);
            background: var(--accent);
            color: var(--text-on-accent);
        }

        .device-icon {
            font-size: 3rem;
            margin-bottom: 0.5rem;
        }

        .setup-section {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        .setup-section.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .setup-step {
            background: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .setup-step h3 {
            color: var(--primary);
            margin-bottom: 1rem;
            font-size: 1.5rem;
        }

        .setup-step ol, .setup-step ul {
            padding-left: 1.5rem;
            color: var(--text-muted);
        }

        .setup-step li {
            margin-bottom: 1rem;
            line-height: 1.8;
        }

        .setup-step strong {
            color: var(--text-main);
        }

        .dns-servers {
            background: var(--bg-header);
            border: 1px solid var(--primary);
            border-radius: 8px;
            padding: 1.5rem;
            margin: 1rem 0;
        }

        .dns-servers h4 {
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .dns-servers p {
            font-family: 'Courier New', monospace;
            font-size: 1.1rem;
            margin: 0.5rem 0;
            color: var(--text-main);
        }

        /* Updated Note Style to match About page "obsolete-callout" vibe */
        .important-note {
            background: rgba(212, 163, 115, 0.1); /* Low opacity copper */
            border: 1px solid var(--accent);
            color: var(--text-main);
            padding: 1.5rem;
            border-radius: 8px;
            margin: 2rem 0;
        }

        .important-note strong {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--accent);
        }

        /* Success Message - Keeping it solid for visibility */
        #success-message {
            background: var(--accent);
            color: var(--text-on-accent);
            border: none;
        }
        #success-message strong {
            color: var(--text-on-accent);
        }
        #success-message a {
            color: var(--text-on-accent) !important;
            font-weight: bold;
        }

        code {
            background: #111; /* Deep black for code blocks */
            color: var(--accent); /* Copper text for IPs/commands */
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            border: 1px solid #333;
        }

        a {
            color: var(--primary);
        }
        a:hover {
            color: var(--accent);
        }

        @media (max-width: 768px) {
            .device-selector {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            }

            .setup-hero h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
